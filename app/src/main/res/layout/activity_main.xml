<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/show2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.weather.MainActivity">

    <EditText
        android:id="@+id/edt_getCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要查询的城市" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_getCity"
        android:text="查询天气" />

    <TextView
        android:id="@+id/tex_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_show"
        android:gravity="center"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tex_top">

        <TextView
            android:id="@+id/tex_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </ScrollView>

    <Button
        android:id="@+id/bt2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tex_top"
        android:layout_alignParentEnd="true"
        android:text="发短信" />


</RelativeLayout>
